<Alloy>
	<View id="postContainer">
		<View id="titleView">
			<Label id="title">Add Lecture Details</Label>
		</View>
		<View id="contentView">
			<Label left="0dp" top="10dp">Lecture Title:</Label>
			<TextField id="teacherNameTextbox" left="100dp" top="10dp" maxLength=50/>
			<Label left="0dp" top="45dp" class="heading">Lecture Details:</Label>
			<Label right="2dp" top="45dp" id="timeLabel">9.00AM-10.00AM</Label>
			<TextArea top="75dp" left="0dp" right="5dp" height="150dp" maxLength=140 />
			<View  left="5dp" top="235dp" height=Ti.UI.SIZE width=Ti.UI.SIZE layout="horizontal">
				<ImageView image="/images/attachment.png"></ImageView>
				<Label id="attachmentLabel" class="linkLabel">Attachments</Label>
			</View>
			<View  left="50%" top="235dp" height=Ti.UI.SIZE width=Ti.UI.SIZE layout="horizontal">
				<ImageView image="/images/camera.png"></ImageView>
				<Label id="cameraLabel" class="linkLabel">Camera</Label>
			</View>
			<ImageView image="/images/checked.png" left="5dp" top="280dp" onClick="actionHomeworkCheckbox"/>
			<Label top="278dp" left="30dp" class="checkboxLabel">Homework</Label>
			<Label top="300dp" left="30dp">Select time:</Label>
			<TextField top="295dp" left="110dp" width="200dp"/>
			<ImageView image="/images/checked.png" left="5dp" top="330dp"  onClick="actionTestCheckbox"/>
			<Label top="328dp" left="30dp" class="checkboxLabel">Test</Label>
			<Label top="350dp" left="30dp">Select time:</Label>
			<TextField top="345dp" left="110dp" width="200dp"/>
			<Button id="saveBtn" bottom="5dp" right="115dp">Save</Button>
			<Button id="cancelBtn" bottom="5dp" right="5dp">Cancel</Button>
		</View>
	</View>
</Alloy>