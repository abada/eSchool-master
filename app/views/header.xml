<Alloy>
	<View id="container">	
		<ImageView id="logo"/>
		
		<View id="back" formFactor="handheld">
			<ImageView id="backImage"/>
		</View>
		<View id="about" formFactor="handheld">
			<ImageView id="aboutSmallIcon"/>
		</View>
		
		<!-- Tablet only nav structure -->
		<View id="nav" formFactor="tablet">
			<View id="home" class="navBtn">
				<ImageView id="homeIcon"/>
			</View>
			<View id="agenda" class="navBtn">
				<ImageView id="agendaIcon"/>
			</View>
			<View id="stream" class="navBtn">
				<ImageView id="streamIcon"/>
			</View>
			<View id="venue" class="navBtn">
				<ImageView id="venueIcon"/>
			</View>
			<View id="about" class="navBtn">
				<ImageView id="aboutIcon"/>
			</View>
		</View>
		
		<!-- user profile for handheld -->
		<View id="profile" formFactor="handheld">
			<ImageView id="profileImage"/>
		</View>
		
		<!-- right controls for tablet -->
		<Button id="profile" formFactor="tablet"/>
		<Button id="post" formFactor="tablet"/>
		
		<View id="underline"/>
	</View>
</Alloy>