<Alloy>
	<Window id="lectureDetailWin">
		<View id="headerView">
			<View id="headerLeftContainer">
				<ImageView id="backArrow"/>
				<ImageView id="search"/>
			</View>
			<View id="headerRightContainer">
				<Label id="usernameLabel">Hi ,</Label>
				<ImageView id="message"/>
				<ImageView id="settings"/>
				<ImageView id="help"/>
			</View>
		</View>
		<View class="titleView">
			<Label class="titleLabel" id="title">Lecture Detail</Label>
		</View>
		<View class="contentView">
			<Label left="10dp" top="10dp">Teacher Name:</Label>
			<Label id="teacherNameLabel" />
			<Label id="timeLabel">9.00AM-10.00AM</Label>
			<Label left="10dp" top="75dp"  class="heading">Lecture Details:</Label>
			<ScrollView top="115dp" left="10dp" right="10dp" bottom="10dp" layout="vertical">
				<Label left="0dp" top="0dp" id="details" />
				<View  left="5dp" top="20dp" height=Ti.UI.SIZE width=Ti.UI.SIZE layout="horizontal" id="attachment">
					<ImageView image="/images/common/attachment.png"></ImageView>
					<Label id="attachmentLabel">Water Cycle</Label>
				</View>
				<Label left="0dp" top="20dp" class="heading">Lecture Timings:</Label>
				<Label left="0dp" top="5dp" id="timings"></Label>
			</ScrollView>
		</View>
	</Window>
</Alloy>